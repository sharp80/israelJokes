<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_root"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="0dp"
              android:background="#ffffff" 
              >
               
    	
        <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/facebook_icon_new"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/facebook_share_button"
        android:padding="10dp"
        android:drawablePadding="-15sp"
		android:background="@color/white" 
        android:text="Facebook"></Button>
              
       
         <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/not_fb"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/not_fb_share_button"
        android:padding="10dp"
        android:drawablePadding="-15sp"
		android:background="@color/white" 
        android:text="Not Facebook"></Button>
</LinearLayout>
        		
