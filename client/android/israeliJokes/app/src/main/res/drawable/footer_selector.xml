<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- selected -->
    <item android:state_selected="false"
        android:color="@color/white"> <!-- text color -->
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />  <!-- button color -->
            <padding android:bottom="10dp" android:top="10dp" />
        </shape>
    </item>
    
    <!-- default -->
    <item android:color="@color/black"> <!-- text color -->
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- button color -->
            <padding android:bottom="10dp" android:top="10dp" />
        </shape>
    </item>

</selector>